{
  "name": "basicis/basicis",
  "description": "Basicis PHP Framework | Project",
  "type": "project",
  "license": "MIT",
  "version": "1.0",
  "minimum-stability": "dev",
  "authors": [
      {
          "name": "Messias Dias",
          "email": "messiasdias.ti@gmail.com"
      }
  ],

  "require": {
      "php": "^7.3",
      "basicis/core" : "dev-master"
  },

  "require-dev": {
      "phpunit/phpunit": "^9.2.6",
      "squizlabs/php_codesniffer": "3.*",
      "phpdocumentor/phpdocumentor":"2.*"
  },

  "autoload": {
       "psr-4": {
            "App\\Controllers\\": "src/controllers",
            "App\\Middlewares\\": "src/middlewares",
            "App\\Models\\": "src/models",
            "App\\Test\\": "test/"
       }
  },

  "scripts": {
      "dev:start" : "bash bin/server start",
      "dev:stop" : "bash bin/server stop",
      "dev": "composer dev:start",
      "console" : "php bin/console",
      "log" : "bash bin/log",
      "test" : "vendor/bin/phpunit test",
      "tests" : "bash bin/test",
      "phpcs" : "vendor/bin/phpcs --standard=PSR2",
      "phpdoc": "vendor/bin/phpdoc",
      "phpdocs": "php -S 0.0.0.0:8000 -t docs/"
  },
  "config": {
      "process-timeout": 0
  }
}
