{
  "name": "basicis/basicis",
  "description": "Basicis PHP Framework | Project",
  "type": "project",
  "license": "MIT",
  "version": "1.0",
  "minimum-stability": "dev",
  "authors": [
      {
          "name": "Messias Dias",
          "email": "messiasdias.ti@gmail.com"
      }
  ],

  "require": {
      "php": "^7.3",
      "basicis/core" : "*"
  },

  "require-dev": {
    "phpunit/phpunit": "^9.2.6",
    "squizlabs/php_codesniffer": "3.*",
    "clean/phpdoc-md" : "~0.19.1",
    "symfony/maker-bundle": "^1.25",
    "symfony/dotenv": "^5.2"
  },

  "autoload": {
       "psr-4": {
            "App\\Controllers\\": "src/controllers/",
            "App\\Middlewares\\": "src/middlewares/",
            "App\\Models\\": "src/models/",
            "App\\Test\\": "test/"
       }
  },

  "scripts": {
      "dev:start" : "bash vendor/bin/server start",
      "dev:stop" : "bash vendor/bin/server stop",
      "dev": "composer dev:start",
      "test" : "vendor/bin/phpunit --do-not-cache-result --no-logging test",
      "auto-test" : "bash vendor/bin/test",
      "autotest" : "composer auto-test",
      "phpcs" : "vendor/bin/phpcs --standard=PSR2",
      "phpdoc": "vendor/bin/phpdoc-md",
      "doctrine" : "php vendor/bin/doctrine",
      "post-create-project-cmd" : [
        "php -r \"copy('vendor/basicis/core/config/app-config.php', 'config/app-config.php', );\"",
        "php -r \"copy('vendor/basicis/core/config/cli-config.php', 'config/cli-config.php');\"",
        "php -r \"copy('vendor/basicis/core/config/db-config.php', 'config/db-config.php');\"",
        "php -r \"copy('.env.example', '.env.local');\""
      ],
      "post-autoload-dump" : [
        
      ]
  },
  "config": {
      "process-timeout": 0
  }
}
